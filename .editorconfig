root = true

[*]
charset = utf-8
max_line_length = 80
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{go,mk}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.md]
indent_style = space
indent_size = 4
tab_width = 4

[*.yaml]
indent_style = space
indent_size = 2
tab_width = 2
